{
  "editor.cursorBlinking": "smooth",
  "editor.detectIndentation": false,
  "editor.formatOnSave": false,
  "editor.formatOnPaste": true,
  "editor.lineNumbers": "on",
  "editor.lineHeight": 30,
  "editor.multiCursorModifier": "ctrlCmd",
  "explorer.openEditors.visible": 0,
  "editor.quickSuggestions": { "comments": true },
  "editor.quickSuggestionsDelay": 0,
  "editor.renderWhitespace": "all",
  "editor.rulers": [
    80,
    120
  ],
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "extensions.ignoreRecommendations": false,
  "files.eol": "\n",
  "files.exclude": {
    ".git": true,
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.path": "C:\\tools\\Git\\bin\\git.exe",
  "prettier.singleQuote": true,
  "php.suggest.basic": false,
  "php.validate.executablePath": "C:\\tools\\php74\\php.exe",
  "php-cs-fixer.rules": "@PSR2",
  "php-cs-fixer.config": "~/.vscode/.php_cs.laravel",
  "php-cs-fixer.executablePath": "${extensionPath}\\php-cs-fixer.phar",
  "php-cs-fixer.lastDownload": 1583510590836,
  "search.useIgnoreFiles": false,
  "search.exclude": {
    "**/node_modules": true,
    // Hide everything in /vendor, except "laravel" folder.
    "**/vendor/[abcdefghijkmnopqrstuvwxyz]*": true,
    "**/vendor/l[bcdefghijklmnopqrstuvwxyz]*": true,
    "storage/framework/views": true
  },
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\wsl.exe",
  "workbench.colorTheme": "Hybrid Next (Gray Background)",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "window.zoomLevel": 0,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[php]": {
    "editor.defaultFormatter": "junstyle.php-cs-fixer",
  },
  "[vue]": {
    "editor.defaultFormatter": "octref.vetur"
  },
}
